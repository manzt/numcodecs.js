{
  "name": "numcodecs",
  "author": "Trevor James Manz",
  "version": "0.2.2",
  "description": "Buffer compression and transformation codecs for use in data storage and communication applications.",
  "types": "index.d.ts",
  "main": "index.js",
  "module": "index.js",
  "type": "module",
  "exports": {
    ".": "./index.js",
    "./gzip": "./gzip.js",
    "./zlib": "./zlib.js",
    "./blosc": "./blosc.js",
    "./lz4": "./lz4.js",
    "./zstd": "./zstd.js"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/manzt/numcodecs.js.git"
  },
  "scripts": {
    "build": "tsc --emitDeclarationOnly --declaration --outDir dist && rollup -c",
    "postbuild": "cp package.json dist && cp README.md dist",
    "prebuild": "rm -rf dist",
    "format": "prettier --write src/**/*.ts test/**/*.js",
    "lint": "prettier --check src src/**/*.ts test/**/*.js",
    "test": "npm run build && node test/index.test.js",
    "test:prod": "npm run lint && npm test | tap-set-exit"
  },
  "keywords": [
    "zarr",
    "compression",
    "codecs",
    "storage"
  ],
  "engines": {
    "node": ">=12"
  },
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@types/emscripten": "^1.39.5",
    "@types/pako": "^1.0.1",
    "esbuild": "^0.12.11",
    "pako": "^2.0.3",
    "prettier": "^2.2.1",
    "rollup": "^2.40.0",
    "rollup-plugin-esbuild": "^4.5.0",
    "tap-set-exit": "^1.1.1",
    "typescript": "^4.2.2",
    "zora": "^4.0.2"
  },
  "prettier": {
    "trailingComma": "es5",
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid"
  }
}
