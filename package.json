{
  "name": "numcodecs",
  "version": "0.3.1",
  "description": "Buffer compression and transformation codecs for use in data storage and communication applications.",
  "author": "Trevor Manz",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/manzt/numcodecs.js.git"
  },
  "keywords": [
    "zarr",
    "compression",
    "codecs",
    "storage"
  ],
  "files": [
    "dist",
    "src",
    "codecs"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./src/index.js"
    },
    "./gzip": {
      "types": "./dist/src/gzip.d.ts",
      "import": "./src/gzip.js"
    },
    "./zlib": {
      "types": "./dist/src/zlib.d.ts",
      "import": "./src/zlib.js"
    },
    "./blosc": {
      "types": "./dist/src/blosc.d.ts",
      "import": "./src/blosc.js"
    },
    "./lz4": {
      "types": "./dist/src/lz4.d.ts",
      "import": "./src/lz4.js"
    },
    "./zstd": {
      "types": "./dist/src/zstd.d.ts",
      "import": "./src/zstd.js"
    }
  },
  "scripts": {
    "prepare": "npm run build",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts test/**/*.js",
    "lint": "prettier --check src src/**/*.ts test/**/*.js",
    "test": "node test/index.test.js | tap-set-exit"
  },
  "dependencies": {
    "fflate": "^0.8.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@svitejs/changesets-changelog-github-compact": "^1.1.0",
    "@types/emscripten": "^1.39.10",
    "@types/node": "^20.10.5",
    "prettier": "^3.0.1",
    "tap-set-exit": "^1.1.1",
    "typescript": "^5.1.6",
    "zora": "^5.2.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid"
  }
}
